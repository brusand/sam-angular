{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "filesGlob": [
    "./src/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "typings/main"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "files": [
    "./src/app/sam/sam.action.ts",
    "./src/app/sam/sam.model.ts",
    "./src/app/sam/sam.state.ts",
    "./src/app/sam/sam.view.ts",
    "./src/sam.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
